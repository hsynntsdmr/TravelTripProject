@using TravelTripProject.Models ;
@model List<Blog>
@{
    ViewBag.Title = "Home Page";
}

<html>
<body>
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Seyahat Blogum</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Content/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restaurants</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Content/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Flights</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Content/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Things to do</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/Content/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Vacation Rents</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider">

                            <ul class="rslides" id="slider1" style="width:660px; height:360px;">
                                @foreach (var item in Model)
                                {
                                    <li><img style="max-width:650px;" src="@item.BlogImage" alt="Blog Fotografları"></li>
                                }
                            </ul>


                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Welcome to My Travel Blog!</h3>
                    <p>Hello fellow explorers! I'm Hüseyin, and I'm thrilled to have you here. Join me as I share the best travel experiences, local delights, and tips. Let's embark on this adventure together and discover the wonders of our world. Happy travels!</p>
                </div>
                @Html.Action("Partial1", "Home")

                <div class="grids">
                    <div class="box1">
                        <div class="padding">
                            @Html.Action("Partial2", "Home")
                        </div>
                        @Html.Action("Partial3", "Home")
                     
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>