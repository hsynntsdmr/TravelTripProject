@using TravelTripProject.Models
@model List<Blog>

<div class="con-bot">
    @foreach (var x in Model){
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="icerik resim" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik </h4>

            <span class="doller">@x.Tarih.ToShortDateString()</span>
            <p>@(x.Aciklama.Length >= 51 ? x.Aciklama.Substring(0, 80) : x.Aciklama)</p>

            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Read More >></span></a></p>
        </div>
    </div>




    }
</div>