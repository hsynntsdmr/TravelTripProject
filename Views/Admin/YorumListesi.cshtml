@using TravelTripProject.Models
@model List<Yorum>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.KullaniciAdi</td>
        <td>@item.Mail</td>
        <td>@item.BlogYorum</td>
        <td>@item.Blog.Baslik</td>
        <td><a href="/Admin/YorumSil/@item.Id" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/YorumGetir/@item.Id" class="btn btn-warning">Güncelle</a></td>
    </tr>
    }
</table>