@model TravelTripProject.Models.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(i => i.Baslik)
    @Html.TextBoxFor(i => i.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(i => i.Tarih)
    @Html.TextBoxFor(i => i.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(i => i.BlogImage)
    @Html.TextBoxFor(i => i.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(i => i.Aciklama)
    @Html.TextAreaFor(i => i.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Ekle</button>

</form>
